<UserControl x:Class="GraphTheoryInWPF.Components.NodeConnectionLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphTheoryInWPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Delete Connection(s)" Click="MenuItem_Click">
                    <MenuItem.Icon>
                        <Image Source="/Icons/DependencyWarning_16x.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <!--Main Line-->
        <Line Name="MainLine"/>
        
        <!--Directional Line 1-->
        <Line Name="DirectionalLine1"/>
        
        <!--Directional Line 2-->
        <Line Name="DirectionalLine2"/>

    </Grid>
</UserControl>
